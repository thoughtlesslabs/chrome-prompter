{
    "manifest_version": 3,
    "name": "Auto-Scroll Screen Prompter",
    "version": "1.0.1",
    "description": "Auto-scrolls text for presentations and reading. Features adjustable speed, keyboard shortcuts, and dark mode support.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "commands": {
        "toggleTeleprompter": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Start/Stop the prompter"
        },
        "increase-speed": {
            "suggested_key": {
                "default": "Ctrl+Shift+Up",
                "mac": "Command+Shift+Up"
            },
            "description": "Increase scroll speed"
        },
        "decrease-speed": {
            "suggested_key": {
                "default": "Ctrl+Shift+Down",
                "mac": "Command+Shift+Down"
            },
            "description": "Decrease scroll speed"
        }
    }
}